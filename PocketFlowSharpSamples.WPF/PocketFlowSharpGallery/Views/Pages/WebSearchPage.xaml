<Page x:Class="PocketFlowSharpGallery.Views.Pages.WebSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:PocketFlowSharpGallery.Views.Pages"
      xmlns:helpers="clr-namespace:PocketFlowSharpGallery.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WebSearchPage">

    <Page.Resources>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Ask any question and let the AI search the web for answers" 
                       FontSize="14" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Search Input -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ui:TextBox Grid.Column="0"
                        Text="{Binding Question, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Enter your question here..."
                        FontSize="14"
                        Margin="0,0,10,0"
                        KeyDown="TextBox_KeyDown"/>
            
            <ui:Button Grid.Column="1"
                       Content="Search"
                       Icon="{ui:SymbolIcon Search24}"
                       Command="{Binding SearchCommand}"
                       IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}"
                       MinWidth="100"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Results Panel -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Search Results" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SearchStatus}" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="10,2,0,0"/>
                </StackPanel>

                <ui:TextBox Grid.Row="1"
                            Text="{Binding Result, Mode=OneWay}"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            PlaceholderText="Results will appear here..."
                            FontFamily="Consolas"
                            FontSize="12"/>

                <ui:Button Grid.Row="2"
                           Content="Clear Results"
                           Icon="{ui:SymbolIcon Delete24}"
                           Command="{Binding ClearResultCommand}"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Left"/>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"
                          Background="LightGray"/>

            <!-- Side Panel -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <TabControl>
                    <TabItem Header="Configuration">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="LLM Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Model Name:" Margin="0,0,0,5"/>
                                <ui:TextBox Text="{Binding ModelName}" 
                                            PlaceholderText="e.g., gpt-3.5-turbo"
                                            Margin="0,0,0,10"/>

                                <TextBlock Text="Endpoint:" Margin="0,0,0,5"/>
                                <ui:TextBox Text="{Binding EndPoint}" 
                                            PlaceholderText="e.g., https://api.openai.com/v1"
                                            Margin="0,0,0,10"/>

                                <TextBlock Text="API Key:" Margin="0,0,0,5"/>
                                <ui:PasswordBox x:Name="ApiKeyBox"
                                                Password="{Binding ApiKey}"
                                                PlaceholderText="Enter your API key"
                                                Margin="0,0,0,10"/>

                                <TextBlock Text="Brave Search API Key:" Margin="0,0,0,5"/>
                                <ui:PasswordBox x:Name="BraveApiKeyBox"
                                                Password="{Binding BraveSearchApiKey}"
                                                PlaceholderText="Enter your Brave Search API key"
                                                Margin="0,0,0,15"/>

                                <ui:Button Content="Save Configuration"
                                           Icon="{ui:SymbolIcon Save24}"
                                           Command="{Binding SaveConfigurationCommand}"
                                           HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    
                    <TabItem Header="History">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,5">
                                <TextBlock Text="Search History" FontWeight="SemiBold"/>
                                <ui:Button Content="Clear"
                                           Icon="{ui:SymbolIcon Delete24}"
                                           Command="{Binding ClearHistoryCommand}"
                                           Margin="10,0,0,0"
                                           FontSize="12"/>
                            </StackPanel>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding SearchHistory}"
                                     Margin="10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   TextWrapping="Wrap"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Margin="5"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="LightGray" 
                Padding="10,5"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <ui:ProgressRing IsIndeterminate="{Binding IsSearching}" 
                                 Width="16" 
                                 Height="16"
                                 Margin="0,0,10,0"/>
                <TextBlock Text="{Binding SearchStatus}" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
